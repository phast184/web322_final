    <!--Registration Form-->
    <div id="myModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Registration</h5>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            <form class="justify-content-left" id="frmRegister" method = "POST" action="/">
              <div class="form-group">
                <label>Email</label>
              </div>
              <div class="form-group ">
                <input type="text" class="form-control" id="email" placeholder="Email" name ="email">
              </div>
              <div class="form-group">
                <label>First Name</label>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="first_name" placeholder="First Name" name = "first_name">
              </div>
              <div class="form-group">
                <label>Last Name</label>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="last_name" placeholder="Last Name" name = "last_name">
              </div>
              <div class="form-group">
                <label>Username</label>
              </div>
              <div class="form-group ">
                <input type="text" class="form-control" id="username" placeholder="Username" name = "username">
              </div>
              <div class="form-group">
                <label>Password</label>
              </div>
              <div class="form-group ">
                <input type="password" class="form-control" id="password" placeholder="Password" name = "password">
              </div>
              <div class="form-group">
                <h5>Birthday</h5>
                <p class="agewarning"> You have to be at least 18 years old to be a member.
                </p>
              </div>
              <div class="form-group">
                <input type="date" id="dob1" class="form-control" />
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-info form-control" id="btnSignup" value="signup">Sign up</button>
              </div>
              <div class="form-group">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="gridCheck">
                  <label class="form-check-label" for="gridCheck">
                    I donâ€™t want to receive marketing messages from Airbnb. I can also opt out of receiving these at any
                    time in my account settings or via the link in the message.
                  </label>
                </div>
              </div>

            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    
    <!--Login Form-->
    <div id="myModal1" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Registration</h5>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            <form class="justify-content-left" id="frmRegister" method = "POST" action="/">
              
              <div class="form-group">
                <label>Username</label>
              </div>
              <div class="form-group ">
                <input type="text" class="form-control" id="username" placeholder="Username" name = "username">
              </div>
              <div class="form-group">
                <label>Password</label>
              </div>
              <div class="form-group ">
                <input type="password" class="form-control" id="password" placeholder="Password" name = "password">
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-info form-control" id="btnLogin" value="signup">Login</button>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


    <!--Searching form-->
    <form id="form_search" class="justify-content-left col-sm-4">
      <h4>Book unique places to stay and things to do</h4>
      <div class="form-group">
        <label>Where</label>
        <select class="form-control">
          <option selected disabled>Please choose a city</option>
          <option value="Toronto">Toronto</option>
          <option value="Vancouver">Vancouver</option>
          <option value="Ottawa">Ottawa</option>
          <option value="Calgary">Calgary</option>
        </select>
      </div>

      <div class="form-row" id="checkincheckout">
        <div class="col-sm">
          <label>Check in</label>
          <input type="date" id="date1" placeholder="dd-mm-yyyy" class="form-control">
        </div>

        <div class="col-sm">
          <label>Check out</label>
          <input type="date" id="date2" placeholder="dd-mm-yyyy" class="form-control">
        </div>

      </div>

      <div class="form-group" id="number_of_guests">
        <label>GUEST</label>
        <input type="text" placeholder="Number of guests" id="number" class="form-control">
      </div>

      <div class="form-row" id="adult-children">
        <div class="col-sm">
          <label>Adult</label>
          <select class="form-control">
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
          </select>
        </div>

        <div class="col-sm">
          <label>Children</label>
          <select class="form-control">
            <option value=0>0</option>
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-secondary form-control" id="btnSearch" value="search">Search</button>
      </div>
    </form>
  </div>



